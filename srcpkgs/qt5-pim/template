# Template file for 'qt5-pim'
pkgname=qt5-pim
version=5.0.0r1029
revision=1
_commit=f9a8f0fc914c040d48bbd0ef52d7a68eea175a98 # last known-working Qt5 commit
wrksrc="qtpim-${_commit}"
build_style=qmake
hostmakedepends="qt5-qmake qt5-host-tools perl git"
makedepends="qt5-declarative-devel"
short_desc="Cross-platform application and UI framework (QT5) - PIM component"
maintainer="Jami Kettunen <jami.kettunen@protonmail.com>"
license="GPL-3.0-or-later, LGPL-3.0-or-later"
