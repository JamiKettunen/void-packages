lomiri-ui-toolkit-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/share/doc
		vmove usr/share/lomiri-ui-toolkit
	}
}

