# Template file for 'lomiri-deviceinfo'
pkgname=lomiri-deviceinfo
version=0.1.0r66
revision=1
_commit=aec13335ad4de0bf07ddce63fb51c07cf5381a83 # tip of main branch as of 2022-03-27
wrksrc="deviceinfo-${_commit}"
build_style=cmake
hostmakedepends="pkg-config"
makedepends="yaml-cpp-devel"
checkdepends="gtest-devel"
short_desc="Library to detect and configure devices for Lomiri"
maintainer="Jami Kettunen <jami.kettunen@protonmail.com>"
