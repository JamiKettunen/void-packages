	configure_args+=" -DENABLE_TESTS=ON"
fi

ayatana-indicator-keyboard-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove "usr/lib/*.so"
	}
}
