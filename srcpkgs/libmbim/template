# Template file for 'libmbim'
pkgname=libmbim
version=1.29.1r1073
revision=1
_commit=6dd65410ad746caa1b992aabe65b7c8629762da0 # 2022-11-27
build_style=meson
build_helper="gir qemu"
hostmakedepends="pkg-config help2man"
makedepends="glib-devel libgudev-devel bash-completion"
short_desc="MBIM modem protocol helper library (git ${_commit:0:7})"
maintainer="Jami Kettunen <jami.kettunen@somainline.org>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://www.freedesktop.org/wiki/Software/libmbim/"
changelog="https://gitlab.freedesktop.org/mobile-broadband/libmbim/-/raw/main/NEWS"
distfiles="https://gitlab.freedesktop.org/mobile-broadband/libmbim/-/archive/${_commit}.tar.gz"
checksum=5d79f946684a31a03964c3e74eac5a093c711e90a4b5c84c36a788574d99a26f

build_options="gir"
build_options_default="gir"

libmbim-devel_package() {
	depends="${sourcepkg}-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
	}
}
