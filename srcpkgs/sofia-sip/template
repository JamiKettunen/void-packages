# Template file for 'sofia-sip'
_githash=fbab3b7b3d077105378585d75d61a0a9c6fb7a4e # tip of master branch as of 2021-07-18
_gitshort=${_githash:0:7}

pkgname=sofia-sip
version=1.13.4
revision=2
build_style=gnu-configure
makedepends="openssl-devel glib-devel"
hostmakedepends="automake autoconf libtool pkg-config"
short_desc="Open-source SIP User-Agent library [git ${_gitshort}]"
maintainer="Jami Kettunen <jami.kettunen@somainline.org>"
license="LGPL-2.1-or-later"
homepage="https://github.com/freeswitch/sofia-sip"
distfiles="$homepage/archive/${_githash}.tar.gz>$pkgname-${_gitshort}.tar.gz"
checksum=79cea35a5d6d47e15e03762c59039bed7ea774732b4e4a84894891cc59b8510e
wrksrc="$pkgname-${_githash}"

pre_configure() {
	NOCONFIGURE=1 ./autogen.sh
}

post_install() {
	vlicense COPYING
}

sofia-sip-devel_package() {
	#depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}

libsofia-sip_package() {
	short_desc+=" - shared libraries"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}
