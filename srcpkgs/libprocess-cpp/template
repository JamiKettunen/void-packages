# Template file for 'libprocess-cpp'
pkgname=libprocess-cpp
version=3.0.2r157
revision=1
_commit=ee6d99a3278343f5fdcec7ed3dad38763e257310 # tip of main branch as of 2022-03-20
wrksrc="process-cpp-${_commit}"
build_style=cmake
hostmakedepends="pkg-config"
makedepends="boost-devel properties-cpp"
checkdepends="gtest-devel"
short_desc="Convenience library for handling processes"
maintainer="Jami Kettunen <jami.kettunen@protonmail.com>"
license="LGPL-3.0-only"
