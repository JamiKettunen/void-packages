build_style=cmake
hostmakedepends="pkg-config qt5-host-tools qt5-qmake ubports-cmake-extras intltool qt5-tools"
makedepends="gsettings-qt-devel qt5-devel liblomiri-api-devel ofono-devel libsecret-devel
 libnma-devel lomiri-url-dispatcher-devel qt5-declarative-devel libqofono-devel"
checkdepends="libqtdbustest-devel libqtdbusmock-devel libgmenuharness-devel gtest-devel
 python3-dbusmock dbus"
