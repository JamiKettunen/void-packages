# FIXME: No tests were found!!!

if [ -z "$XBPS_CHECK_PKGS" ] || [ "$CROSS_BUILD" ]; then
	configure_args+=" -DENABLE_TESTS=OFF"
fi

post_install() {
	# TODO: optional upstart service (remove entirely after xenial migration?)
	rm -r ${DESTDIR}/etc/init
}

biometryd-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}

